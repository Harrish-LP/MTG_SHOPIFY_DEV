<!-- ====== References & Resources Styles ====== -->
<style>
  .references-section {
    margin: 40px auto;
    padding: 0;
    font-family: 'Open Sans', sans-serif;
  }

  /* Desktop layout */
  .references-section.desktop {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 30px;
  }

  .references-section .image-column {
    flex: 0 0 40%;
    display: flex;
    justify-content: center;
  }

  .references-section .image-column img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 15px;
  }

  .references-section .text-column {
    flex: 1;
    max-width: 480px;
    text-align: left;
  }

  .references-section .text-column h3 {
    margin-bottom: 20px;
    font-family: Montserrat, sans-serif;
    font-size: 26px;
    font-weight: 700;
    color: #212b4b;
  }

  .references-section .text-column a {
    display: block;
    margin-bottom: 15px;
    font-size: 16px;
    line-height: 1.6;
    color: #4a90e2;
    text-decoration: underline;
    transition: color 0.3s;
  }

  .references-section .text-column a:hover {
    color: #2c5aa0;
  }

  /* Tablet / mobile layout */
  .references-section.tablet {
    display: none;
    gap: 15px;
    flex-direction: column;
    align-items: flex-start;
  }

  .references-section.tablet .text-column h3 {
    font-family: Montserrat, sans-serif;
    font-size: clamp(18px, 2vw + 1rem, 26px);
    font-weight: 700;
    color: #212b4b;
  }

  /* Responsive switch */
  @media screen and (max-width: 991px) {
    .references-section.desktop {
      display: none;
    }
    .references-section.tablet {
      display: flex;
    }
  }
</style>

<!-- ====== References & Resources (Desktop) ====== -->
<div class="references-section desktop">
  <div class="image-column">
    <img
      src="https://cdn.shopify.com/s/files/1/0937/2788/files/What_is_Mandatory_Training_-_Dr_Richard_Dune_cdeb1ba6-ea94-44e7-9c6c-c440eca3a7e8.png?v=1735910533"
      alt="Why Organ Donation Week 2025 Matters More Than Ever - The Mandatory Training Group UK -"
      title="Why Organ Donation Week 2025 Matters More Than Ever - The Mandatory Training Group UK -"
    >
  </div>

  <div class="text-column">
    <h3>References &amp; Resources</h3>
    {% if article.metafields.custom.references_and_resources %}
      {% for ref in article.metafields.custom.references_and_resources.value %}
        <a href="{{ ref.url }}" target="_blank" rel="noopener">
          <em>{{ ref.text }}</em>
        </a>
      {% endfor %}
    {% endif %}
  </div>
</div>

<!-- ====== References & Resources (Tablet/Mobile) ====== -->
<div class="references-section tablet">
  <div class="text-column">
    <h3>References &amp; Resources</h3>
  </div>

  <div class="image-column">
    {% if article.metafields.custom.ref_res_alt_text_and_title %}
      <img
        src="https://cdn.shopify.com/s/files/1/0937/2788/files/What_is_Mandatory_Training_-_Dr_Richard_Dune_cdeb1ba6-ea94-44e7-9c6c-c440eca3a7e8.png?v=1735910533"
        alt="{{ article.metafields.custom.ref_res_alt_text_and_title | escape }}"
        title="{{ article.metafields.custom.ref_res_alt_text_and_title | escape }}"
      >
    {% endif %}
  </div>

  <div class="text-column">
    {% if article.metafields.custom.references_and_resources %}
      {% for ref in article.metafields.custom.references_and_resources.value %}
        <a href="{{ ref.url }}" target="_blank" rel="noopener">
          <em>{{ ref.text }}</em>
        </a>
      {% endfor %}
    {% endif %}
  </div>
</div>

<div class="About-author-section">
  <!-- LEFT COLUMN (Text) -->
  <div class="text-column">
    <h3><span style="color: #212b4b;">About the author</span></h3>
    <h4>{{ article.author }}</h4>
    <p>
      {% if article.metafields.custom.author_description %}
        {{ article.metafields.custom.author_description }}
      {% endif %}
    </p>
  </div>

  <!-- RIGHT COLUMN (Image) -->
  <div class="image-column">
    {% if article.metafields.custom.author_img %}
      <img
        src="{{ article.metafields.custom.author_img | image_url: width: 200 }}"
        alt="{{ article.metafields.custom.author_image_alt_title | default: article.metafields.custom.author_img.alt | escape }}"
        title="{{ article.metafields.custom.author_image_alt_title | default: article.metafields.custom.author_img.alt | escape }}"
        loading="lazy"
      >
    {% endif %}
  </div>
</div>

