
<div style="margin:20px; padding: .5rem">
  <swiper-container class="mySwiper" pagination="true" pagination-clickable="true" space-between="15"
  slides-per-view="3"     
  breakpoints='{
    "0": { "slidesPerView": 1 },
    "768": { "slidesPerView": 2 },
    "1024": { "slidesPerView": 3 }
  }'>
  {% for testimonial in settings.pdp_global_testimonial %}
    <swiper-slide>
      <div class="testimonial-slider">
        <div class="star-rating">
          {% for i in (1..testimonial.rating) %}
            <span class="star">&#9733;</span>
          {% endfor %}
        </div>
        <div class="testimonial-content">{{ testimonial.content | metafield_tag }}</div>
        <div class="author">{{ testimonial.author }}</div>
        <div class="company">{{ testimonial.company }}</div>
      </div>
    </swiper-slide>
  {% endfor %}
  </swiper-container>
</div>

<style>
    swiper-container {
      width: 100%;
      height: 100%;
    }

    swiper-slide {
      font-size: 10px;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .star-rating {
      font-size: 20px;
      display: flex;
      gap: 5px;
      color: gold;
    }

    .testimonial-content {
      font-size: 12px;
      color: #666;
      margin-bottom: 15px;
      font-style: italic;
    }

    .testimonial-slider{
      padding: 10px;
      margin: 2rem;
    }
    .author {
      text-align: end;
      font-weight: bold;
      font-size: 12px;
      color: #333;
      font-size: 14px;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
