<!-- IMPROVED BANNER STYLES -->
<style>
  /* Banner Container */
  .box-container {
    min-height: 300px;
    margin: 0 auto 30px;
    padding: 20px 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #212b4b;
    border-radius: 25px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    overflow: hidden;
  }

  /* Hero Image with subtle dark overlay */
  .blog-image {
    width: 100%;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background-image: url(https://picsum.photos/800/600?random);
    background-size: cover;
    background-position: center;
    border-radius: 15px;
    position: relative;
  }

  .blog-image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.25); /* dark overlay for readability */
    border-radius: 15px;
  }

  /* Text Overlay */
  .white-container {
    position: relative;
    padding: 25px 40px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: clamp(20px, 4vw, 40px);
    line-height: 1.2;
    text-align: center;
    background-color: rgba(255, 255, 255, 0.85);
    border-radius: 15px;
    color: #212b4b;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
  }

  /* Author & Date */
  .author-date {
    font-family: "Open Sans", sans-serif;
    font-weight: 400;
    font-size: clamp(10px, 1vw, 13px);
    color: white;
    display: inline-flex;
    align-items: center;
    gap: 5px;
    margin-right: 15px;
  }

  /* Image Credit */
  .image-credit {
    margin-top: 10px;
    font-family: "Open Sans", sans-serif;
    font-weight: 400;
    font-size: clamp(10px, 1vw, 13px);
    color: white;
    text-align: center;
  }

  /* Responsive adjustments */
  @media screen and (max-width: 768px) {
    .box-container {
      padding: 15px;
    }
    .white-container {
      font-size: clamp(18px, 5vw, 28px);
      padding: 15px 20px;
    }
  }

  @media screen and (max-width: 480px) {
    .white-container {
      font-size: clamp(16px, 6vw, 22px);
      padding: 10px 15px;
    }
    .author-date {
      font-size: clamp(9px, 2vw, 11px);
    }
    .image-credit {
      font-size: clamp(9px, 2vw, 11px);
    }
  }
</style>

<!-- IMPROVED BANNER HTML -->
<div class="box-container">
  <div style="margin-bottom: 10px;">
    <span class="author-date">
      <i style="color: #00af52;" class="fas fa-user"></i>Author Full Name
    </span>
    <span class="author-date">
      <i style="color: #00af52;" class="fas fa-calendar"></i>13-09-2025
    </span>
  </div>

  <div class="blog-image" style="background-image: url('{{ article.image | image_url: width: 1600 }}');">
    <div class="white-container"><h1 class="article-title">{{ article.title }}</h1>
</div>
  </div>

  <div class="image-credit">
    <span>Image by Benji Banana via Envato Elements</span>
  </div>
</div>
